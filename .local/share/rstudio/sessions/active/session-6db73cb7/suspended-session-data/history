n <- 1000
## confounding variable
Z <- rbern(n, 0.5)
X <- rbern(n, (1-Z)*0.1 + Z*0.9)
Y <- rbern(n, (1-Z)*0.1 + Z*0.9)
table(X, Y)
rbern(n, 0.1)
table(rbern(n, 0.1))
